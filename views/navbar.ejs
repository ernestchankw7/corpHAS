<style>
    nav {
        position: absolute;
        top: 20px;
        width: 100%;
        left: 50%;
        transform: translateX(-50%);
        /* Center the navbar horizontally */
    }
 
    ul {
        list-style-type: none;
        /* Remove bullets */
        margin: 0;
        padding: 0;
        width: 100%;
        display: flex;
        justify-content: center;
        /* Arrange items in a row */
    }
 
    li {
        margin: 0 20px;
        /* Spacing between links */
    }
 
    a {
        text-decoration: none;
        /* Remove underline */
        color: white;
        /* Text color */
        font-size: 25px;
        font-family: "Lora", serif;
        font-weight: bold;
        /* Make the text bold */
        padding: 10px;
        transition: color 0.3s ease, transform 0.3s ease;
    }
 
    a:hover {
        color: #005a9c;
        /* Blue color on hover */
        transform: scale(1.1);
        /* Slight zoom effect */
    }
 
 
 
 
    /* Hide close-icon on screens larger than 600px */
    @media screen and (min-width: 601px) {
        .close-icon {
            display: none;
        }
    }
 
    @media screen and (max-width: 770px) {
        * {
            box-sizing: border-box;
        }
 
        nav {
            width: 95%;
        }
 
        nav a {
            font-size: 16px;
        }
 
        nav ul {
            justify-content: space-between;
        }
 
        nav li {
            margin-left: 0px;
            margin-right: 0px;
        }
 
        .close-icon {
            display: none;
        }
 
        @media screen and (max-width: 600px) {
            .bar-area {
                position: absolute;
                top: 0px;
                left: 0px;
                width: 100%;
                height: 50px;
                z-index: 999;
                background-color: #fff;
                display: flex;
                align-items: center;
                justify-content: flex-end;
                padding: 0px 10px;
            }
 
            .bar-area svg {
                width: 30px;
            }
 
            .close-icon {
                display: block;
                color: #fff;
                width: 30px;
                position: absolute;
                right: 20px;
                top: 20px;
            }
 
            nav {
                background-color: #015a9c;
                height: 100vh;
                width: 250px;
                position: fixed;
                top: 0px;
                right: -300px;
                z-index: 999999;
                transition: 0.3s ease all;
                left: unset;
                transform: translateX(0px);
            }
 
            nav ul {
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                gap: 20px;
                padding: 40px 10px;
            }
 
            .nav-bar-custom.active {
                right: 0px;
            }
 
           
        }
    }
</style>
 
<div class="bar-area">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
        class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
    </svg>
</div>
 
<nav class="nav-bar-custom">
    <svg class="close-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
        stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
    </svg>
 
    <ul>
        <li><a href="/check-employee-profile/<%= employeeID %>">Home</a></li>
 
        <!-- Conditionally render the Appointment tab -->
        <% if (!appointment) { %>
            <!-- If no appointment exists, show Book Appointment button -->
            <li><a href="/booking-form/<%= employeeID %>">Book Appointment</a></li>
            <% } else { %>
                <!-- If an appointment exists, show Reschedule Appointment button -->
                <li>
                    <a href="/reschedule-appointment/<%= employeeID %>">Reschedule Appointment</a>
                </li>
                <% } %>
 
                    <li id="navBar"><a href="/add-ons/<%= employeeID %>">Add Ons</a></li>
                    <!-- <li id="navBar"><a href="">View Report</a></li> -->
                    <li><a href="/employee-report/<%= employeeID %>">View Report</a></li>
    </ul>
</nav>
 
<script>
    let burger = document.querySelector(".bar-area svg");
    let closeIcon = document.querySelector(".close-icon");
 
    burger.addEventListener("click", (e) => {
        document.querySelector(".nav-bar-custom").classList.toggle("active");
    });
 
    closeIcon.addEventListener("click", (e) => {
        document.querySelector(".nav-bar-custom").classList.toggle("active");
    });
</script>