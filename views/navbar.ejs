<style>
    nav {
        position: absolute;
        top: 20px;
        /* Position the navbar 20px from the top */
        left: 50%;
        transform: translateX(-50%);
        /* Center the navbar horizontally */
    }

    ul {
        list-style-type: none;
        /* Remove bullets */
        margin: 0;
        padding: 0;
        display: flex;
        /* Arrange items in a row */
        white-space: nowrap;
    }

    li {
        margin: 0 20px;
        /* Spacing between links */
    }

    a {
        text-decoration: none;
        /* Remove underline */
        color: white;
        /* Text color */
        font-size: 25px;
        font-family: 'Lora', serif;
        font-weight: bold;
        /* Make the text bold */
        padding: 10px;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    a:hover {
        color: #005A9C;
        /* Blue color on hover */
        transform: scale(1.1);
        /* Slight zoom effect */
    }
</style>

<nav>
    <ul>
        <li><a href="/check-employee-profile/<%= employeeID %>">Home</a></li>

        <!-- Conditionally render the Appointment tab -->
        <% if (!appointment) { %>
            <!-- If no appointment exists, show Book Appointment button -->
            <li><a href="/booking-form/<%= employeeID %>">Book Appointment</a></li>
        <% } else { %>
            <!-- If an appointment exists, show Reschedule Appointment button -->
            <li><a href="/reschedule-appointment/<%= employeeID %>">Reschedule Appointment</a></li>
        <% } %>

        <li id="navBar"><a href="/add-ons/<%= employeeID %>">Add Ons</a></li>
        <!-- New Report Navigation Option -->
        <li><a href="/employee-report/<%= employeeID %>">View Report</a></li>
    </ul>
</nav>